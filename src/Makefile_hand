PMLIB  = libPM.a

all: $(PMLIB)

SRCS = PerfWatch.cpp PerfMonitor.cpp PerfCpuType.cpp
.SUFFIXES: .o .cpp
OBJS = $(SRCS:.cpp=.o)


$(PMLIB): $(OBJS)
	$(AR) $(PMLIB) $(OBJS)
	$(RANLIB) $(PMLIB)
	-mkdir -p $(PM_DIR)/lib
	mv $(PMLIB) $(PM_DIR)/lib
	-mkdir -p $(PM_DIR)/include
	cp ../include/*.h $(PM_DIR)/include
	-mkdir -p $(PM_DIR)/doc
	cp ../doc/*.pdf $(PM_DIR)/doc

.cpp.o:
	$(CXX) $(CXXFLAGS) -I../include -c $<

clean:
	$(RM) *.o $(PM_DIR)/$(PMLIB)

depend: $(OBJS:.o=.cpp)
	@ rm -rf depend.inc
	@ echo $(CXXFLAGS)
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) -I../include -MM $$i >> depend.inc;\
	done

-include depend.inc
